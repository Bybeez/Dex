<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="16dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/species_id"
            android:text="#1"
            android:textSize="16sp"
            android:layout_marginRight="4dp"
            android:textColor="@color/textcolor"/>
        <TextView
            android:id="@+id/identifier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bulbasaur"
            android:fontFamily="sans-serif-condensed"
            android:textAllCaps="true"
            android:textColor="@color/textcolor"
            android:textSize="16sp"/>
    </LinearLayout>
    <!--<pl.droidsonroids.gif.GifImageView
        android:id="@+id/sprite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/bulbasaur"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"/>-->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp">
        <TextView
            android:id="@+id/height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:textColor="@android:color/black"
            android:text="2'"/>
        <TextView
            android:id="@+id/weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:textColor="@android:color/black"
            android:text="16lbs"/>
        <TextView
            android:id="@+id/base_xp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_marginRight="8dp"
            android:visibility="gone"
            android:text="120xp"/>
        <TextView
            android:id="@+id/type1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/grass"
            android:text="GRASS"
            />
        <TextView
            android:id="@+id/type2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/poison"
            android:text=" POISON"/>
    </TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center"
        android:weightSum="2">
        <TextView
            android:id="@+id/abilities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Overgrow\nDrought"
            android:paddingLeft="24dp"
            android:textColor="@android:color/black"
            android:layout_weight="1"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/egg_groups"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:text="Monster\nPlant"
            android:layout_marginRight="24dp"
            android:textColor="@android:color/black"
            android:textSize="16sp"/>
    </TableRow>
    <TextView
        android:id="@+id/evolutions"
        android:gravity="center"
        android:paddingTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:visibility="gone"
        android:text="Evolves into #2 level 16; Evolves into #3 level 36"/>
    <GridLayout
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/hp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:textColor="@color/hp"
            android:text="40"/>
        <TextView
            android:id="@+id/atk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:textColor="@color/atk"
            android:text="50"/>
        <TextView
            android:id="@+id/def"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:textColor="@color/def"
            android:text="45"/>
        <TextView
            android:id="@+id/spa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:textColor="@color/spa"
            android:text="25"/>
        <TextView
            android:id="@+id/spd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:textColor="@color/spd"
            android:text="35"/>
        <TextView
            android:id="@+id/spe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:textColor="@color/spe"
            android:text="30"/>

    </GridLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:visibility="gone"
        android:background="@android:color/black"/>
</LinearLayout>